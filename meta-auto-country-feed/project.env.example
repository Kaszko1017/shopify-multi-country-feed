# Shopify Configuration
STORE_ID=your-store-name              # Required: Shopify store identifier
SHOPIFY_TOKEN=your-shopify-access-token # Required: Shopify API access token
SHOPIFY_API_VERSION=2024-07           # Optional: Shopify API version (default: 2024-07)

# Google Drive Configuration (Required)
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id # Required: Google Drive folder ID
GOOGLE_SERVICE_ACCOUNT_FILE=service-account.json         # Required: Path to Google service account JSON

# Performance Configuration
BULK_CHUNK_SIZE=1000                  # Optional: Processing chunk size (default: 1000)
MAX_RETRIES=3                         # Optional: Maximum retry attempts (default: 3)
BASE_RETRY_DELAY=2.0                  # Optional: Initial retry delay in seconds (default: 2.0)
MAX_RETRY_DELAY=60.0                  # Optional: Maximum retry delay in seconds (default: 60.0)
CSV_BUFFER_SIZE=65536                 # Optional: CSV buffer size in bytes (default: 65536)
DRIVE_MAX_CONCURRENT_UPLOADS=3        # Optional: Max concurrent Google Drive uploads (default: 3)

# Bulk Query Configuration
BULK_QUERY_MAX_BATCH_SIZE=250         # Optional: Bulk query max batch size (default: 250)

# Data Validation
ENABLE_DATA_VALIDATION=true           # Optional: Enable data validation (default: true)
MAX_INVENTORY_THRESHOLD=100000        # Optional: Max inventory sanity check (default: 100000)

# Smart Mapping Configuration
SMART_MAPPING_ENABLED=true            # Optional: Enable smart mapping detection (default: true)
